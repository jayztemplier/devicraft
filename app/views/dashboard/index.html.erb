<h3>Dashboard</h3>
<script>
    $(".alert-message").alert('close')
</script>

<% flash.each do |name, msg| %>
    <div class="alert-message warning" data-alert="close">
      <a class="close" href="#">Ã—</a>

      <p><%= msg %></p>
    </div>
<% end %>

<div class="row">
  <div class="span3 offset4">
    <p><strong>Status : </strong> <%= @status %></p>
  </div>
  <div class="span6">
    <%= link_to "Start Server", start_dashboard_url, class: "btn success" %>
    <%= link_to "Stop Server", stop_dashboard_url, class: "btn danger" %>
  </div>
</div>

<div class="row">
  <div class="span4 offset1">
    <p>Send a message to all players :</p>
  </div>
  <div class="span6">
    <%= form_tag "/dashboard/say", class: "form-stacked" do %>
        <%= text_field_tag 'message' %>
        <%= submit_tag "Say it!", class: "btn primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span7 offset4">
    <%= form_tag "/dashboard/give" do %>
        <fieldset>
          <legend>Give an object to a Player.</legend>
          <div class="clearfix">
            <%= label_tag 'user' %>
            <div class="input"><%= text_field_tag 'user' %></div>
          </div>
          <div class="clearfix">
            <%= label_tag 'number' %>
            <div class="input"><%= number_field_tag 'number' %></div>
          </div>
          <div class="clearfix">
            <%= label_tag 'object' %>
            <div class="input"><%= number_field_tag 'object' %></div>
          </div>
          <div class="actions">
            <%= submit_tag "Give!", class: "btn primary" %>
          </div>
        </fieldset>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="span10 offset3">
    <p>Players :</p>
    <table class="bordered-table">
      <thead>
      <tr>
        <th>Player</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |u| %>
          <tr>
            <th><%= u %></th>
            <th>
              <%= link_to "Give object", "#", class: "btn primary" %>
            </th>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>




